<!-- Put site-specific property overrides in this file. -->

<configuration>
	
<!-- 代理用户 可以从哪个ip来代理briup用户登入hadoop,briup这个位置的值可以修改 -->
	<property>
		<name>hadoop.proxyuser.aaa.hosts</name>
		<value>*</value>
	</property>
<!-- 代理用户，可以从哪个组下的用户来代理briup登入hadoop，briup这个值可以替换 -->
	<property>
		<name>hadoop.proxyuser.aaa.groups</name>
		<value>*</value>
	</property>	



	 <property>
        	 <name>fs.defaultFS</name>
                <value>hdfs://aaa:9000</value>
     </property>
</configuration>
